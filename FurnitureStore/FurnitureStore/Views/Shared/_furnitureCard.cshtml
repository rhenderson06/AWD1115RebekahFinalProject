@model Furniture

<div class="col-sm-4 col-md-4 col-lg-4">
    <div class="thumbnail">
        <img src="@Model.FurnitureImgUrl" alt="furniture piece" />
        <div class="caption">
            <h3><a asp-controller="Furniture" 
                   asp-action="Details" 
                   asp-route-id="@Model.FurnitureID">@Model.FurnitureName</a></h3>
            <h3>@Model.FurniturePrice</h3>
            <p>@Model.FurnitureDescription</p>
        </div>
        <div class="addToCart">
            <a class="btn btn-dark text-light"
               asp-controller="Cart"
               asp-action="AddToCart"
               asp-route-id="@Model.FurnitureID">Add to Cart</a>
        </div>
    </div>
</div>